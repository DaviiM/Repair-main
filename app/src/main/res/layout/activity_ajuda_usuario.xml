<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:orientation="vertical"
    tools:context=".AjudaUsuario">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:onClick="voltaPerfil"
        android:layout_marginTop="30dp"
        android:src="@drawable/voltando" />


    <View

        android:layout_width="360dp"
        android:layout_height="580dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/round_branco" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-730dp"
        android:src="@drawable/mail" />



    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Fale conosco"
        android:textSize="20sp" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-70dp"
        android:fontFamily="@font/baloo_da"
        android:text="Para falar com nossos administradores, nos envie um e-mail."
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />


    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_da"
        android:text="E-mail Repair"
        android:textSize="20sp" />

    <View

        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/round_cinza" />

    <EditText
        android:id="@+id/et_para"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-50dp"
        android:backgroundTint="#F5F6FA"
        android:focusable="false"
        android:enabled="true"
        android:fontFamily="@font/font"
        android:inputType="textEmailAddress"
        android:text="admrepair7@gmail.com"
        android:textColor="#808080"
        android:textCursorDrawable="@color/colorPrimary" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Assunto"
        android:textSize="20sp"
        android:visibility="visible" />

    <View

        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/round_cinza"
        android:visibility="visible" />

    <EditText
        android:id="@+id/et_assunto"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-50dp"
        android:backgroundTint="#F5F6FA"
        android:inputType="textEmailSubject"
        android:fontFamily="@font/font"
        android:textCursorDrawable="@color/colorPrimary" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Mensagem"
        android:textSize="20sp"
        android:visibility="visible" />

    <View

        android:layout_width="335dp"
        android:layout_height="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/round_cinza"
        android:visibility="visible" />

    <EditText
        android:id="@+id/et_mensagem"
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-150dp"
        android:backgroundTint="#F5F6FA"
        android:fontFamily="@font/font"
        android:textCursorDrawable="@color/colorPrimary" />

    <Button
        android:id="@+id/btnsend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/send"
        />



</LinearLayout>